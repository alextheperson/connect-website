{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["public/**/*", "src/**/*", "app.ts"],
  "exclude": ["**/*.spec.ts"]
}
